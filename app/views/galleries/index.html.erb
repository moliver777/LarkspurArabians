<h1>Listing galleries</h1>

<table>
  <tr>
    <th>Site</th>
    <th>Title</th>
    <th>Description</th>
    <th>Horse</th>
    <th>Thumb</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @galleries.each do |gallery| %>
  <tr>
    <td><%= gallery.site %></td>
    <td><%= gallery.title %></td>
    <td><%= gallery.description %></td>
    <td><%= gallery.horse_id %></td>
    <td><%= gallery.thumb_id %></td>
    <td><%= link_to 'Show', gallery %></td>
    <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
    <td><%= link_to 'Destroy', gallery, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

